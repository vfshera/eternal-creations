---
import Layout from "../layouts/Layout.astro";
import WorkCard from "../components/WorkCard.astro";
import Navigation3 from "../components/Navigation.astro";
---

<Layout title="Work">
  <main data-scroll-container class="pb-20">
    <div class="mt-6 px-8 max-w-hd mx-auto">
      <Navigation3 />
    </div>

    <div
      class="mt-16 md:mt-28 pt-14 md:pt-5 lg:pt-20 px-8 md:px-10 lg:px-20 max-w-hd mx-auto text-secondary"
    >
      <h1
        class="text-3xl sm:text-3xl md:text-5xl lg:text-7xl font-black uppercase"
      >
        <span class="">Our</span>
        <span class="text-[#9C44FC]">Games</span>
      </h1>
      <div class="mt-5 grid grid-cols-1 md:grid-cols-2 gap-8 max-w-hd mx-auto">
        <div class="md:col-span-2">
          <a href="project">
            <!-- First Picture -->
            <WorkCard
              title="Zombie Tower Defense"
              subTitle="One of our amazing universes."
              image="/img/zombie_tower_defense_keyart.webp"
              imgWrapperClass="max-h-[80vh]"
            />
          </a>
        </div>
        <a href="project">
          <WorkCard
            title="Portal Unlimited"
            subTitle="One of our amazing universes."
            image="/img/portal_unlimited_render_2.webp"
          />
        </a>
        <a href="project">
          <WorkCard
            title="Room Rush"
            subTitle="One of our amazing universes."
            image="/img/room_rush_keyart.webp"
          />
        </a>
        <a href="projectwp">
          <WorkCard
            title="Weapons Dragons"
            subTitle="Unleash Power, Tame the Beasts."
            image="/img/weapons_+_dragons_v4.webp"
          />
        </a>
        <a href="project">
          <WorkCard
            title="Dino Park"
            subTitle="Build Your Own Dino World"
            image="/img/dino_park_render_v3.webp"
          />
        </a>
        <a href="project">
          <WorkCard
            title="Ultimate Modpack"
            subTitle="Infinite Possibilities, One Modpack."
            image="/img/ump_white_background.webp"
          />
        </a>
        <a href="project">
          <WorkCard
            title="Theia Dimensions"
            subTitle="Unveiling Uncharted Experiences"
            image="/img/theia_dimension_render.webp"
          />
        </a>
      </div>
    </div>
  </main>
</Layout>
<style>
  .arrow:hover {
    color: #9c44fc; /* Set the desired purple color */
  }
</style>

<script>
  // get head component
  const header = document.querySelector("#nav-header") as HTMLDivElement;
  // navigation wrapper
  const navWrapper = document.querySelector(
    "#navigation-wrapper"
  ) as HTMLDivElement;

  window.onscroll = () => {
    // check if the navigation is open
    const navOpen = navWrapper.dataset.open === "true";
    // add background when scrolled > 300px and navigation is closed
    header.dataset.showBg = `${window.scrollY > 300 && !navOpen}`;
  };
</script>
