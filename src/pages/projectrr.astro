---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Navigation />

  <div
    data-scroll-container
    class="overflow-hidden pt-14 md:pt-5 lg:py-20 px-8 md:px-10 lg:px-20"
  >
    <div data-scroll-section class="mt-16 md:mt-28 mx-auto">
      <h1
        class="text-3xl sm:text-3xl md:text-5xl lg:text-7xl font-black uppercase"
      >
        <span class="block">Room Rush</span>
      </h1>

      <div class="h-full w-full mt-5 aspect-video relative overflow-hidden">
        <div class="overlay absolute inset-0 flex justify-center items-center">
          <button
            id="playButton"
            class="hover:shadow-xl flex justify-center items-center h-20 w-20 hover:h-24 hover:w-24 transition-all duration-300 group/play hover:bg-white/95 rounded-full"
          >
            <div
              class="border-[30px] group-hover/play:scale-[.7] scale-75 md:scale-90 border-r-0 border-transparent border-l-[50px] border-l-[#9C44FC] ml-1.5"
            >
            </div>
          </button>
        </div>
        <iframe
          id="videoPlayer"
          class="block w-full h-full object-top object-cover"
          src="video/room_rush_1.webm"
          frameborder="0"
          allowfullscreen></iframe>
      </div>
    </div>

    <section data-scroll-section class="flex flex-col md:flex-row mt-20 gap-5">
      <div class="w-full md:w-2/5">
        <p
          class="text-3xl pl-5 border-l-2 md:border-l-[6px] py-1 md:py-2 md:ml-5"
        >
          Embark on a chilling journey in Room Rush, where navigating through a
          haunted building and evading sinister shadows becomes a thrilling test
          of wits and courage. Will you escape the darkness and uncover the
          building's secrets? Only time will tell.
        </p>
      </div>
      <div class="w-full md:w-3/5 flex flex-col gap-10">
        <div class="aspect-video relative overflow-hidden">
          <img
            src="/img/0.webp"
            class="block w-full h-full object-top object-cover"
            alt=""
          />
        </div>
        <!----PICTURE 2 -->
        <div class="aspect-video relative overflow-visible">
          <img
            src="/img/1.webp"
            class="block absolute right-[20vw] object-center object-cover top-2"
            alt=""
          />
        </div>

        <div class="aspect-video relative overflow-hidden">
          <img
            src="/img/2.webp"
            class="block w-full h-full object-top object-cover"
            alt=""
          />
        </div>
      </div>
    </section>

    <section
      data-scroll-section
      class="grid grid-cols-1 md:grid-cols-2 mt-20 gap-10"
    >
      <div class="">
        <p
          class="text-3xl pl-5 border-l-2 md:border-l-[6px] py-1 md:py-2 md:ml-5"
        >
          Immerse yourself in an eerie, intricately-designed building shrouded
          in mystery. Each room and corridor is crafted to build suspense,
          setting the stage for a truly heart-pounding escape adventure.
        </p>
      </div>
      <div class="aspect-video relative overflow-hidden">
        <img
          src="/img/cool.webp"
          class="block w-full h-full object-top object-cover"
          alt=""
        />
      </div>
      <div class="aspect-video relative overflow-visible">
        <img
          src="/img/1.webp"
          class="block absolute left-[25vw] object-center object-cover top-2"
          alt=""
        />
      </div>
      <div class="aspect-video relative overflow-hidden"></div>
    </section>
  </div>
</Layout>
<Footer />

<script>
  import LocomotiveScroll from "locomotive-scroll";
  const scroll = new LocomotiveScroll({
    el: document.querySelector("[data-scroll-container]"),
    smooth: true,
  });

  // get head component
  const header = document.querySelector("#nav-header") as HTMLDivElement;
  // navigation wrapper
  const navWrapper = document.querySelector(
    "#navigation-wrapper"
  ) as HTMLDivElement;

  scroll.on("scroll", (t) => {
    document.documentElement.setAttribute("data-direction", t.direction);

    // check if the navigation is open
    const navOpen = navWrapper.dataset.open === "true";
    //   // add background when scrolled > 300px and navigation is closed
    header.dataset.showBg = `${t.scroll.y > 300 && !navOpen}`;
  });
</script>
